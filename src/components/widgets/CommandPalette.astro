<style>

  .command-palette-backdrop {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    display: none;
    align-items: flex-start;
    justify-content: center;
    padding-top: 10vh;
    z-index: 9999;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .command-palette-backdrop.open {
    display: flex;
    opacity: 1;
  }

  .command-palette-modal {
    background: var(--color-surface-primary);
    border: 1px solid var(--color-ui-primary);
    width: min(95%, 640px);
    max-height: 80vh;
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    transform: scale(0.95);
    transition: transform 0.2s ease;
    display: flex;
    flex-direction: column;
  }

  .command-palette-backdrop.open .command-palette-modal {
    transform: scale(1);
  }

  /* Tabs */
  .command-palette-tabs {
    display: flex;
    gap: 8px;
    padding: 12px;
    border-bottom: 1px solid var(--color-ui-primary);
    background: var(--color-surface-subtle);
  }

  .command-palette-tab {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 8px 16px;
    background: transparent;
    border: 1px solid transparent;
    border-radius: 6px;
    color: var(--color-content-muted);
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .command-palette-tab:hover {
    background: var(--color-surface-primary);
    color: var(--color-content-primary);
  }

  .command-palette-tab.active {
    background: var(--color-surface-primary);
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .command-palette-close {
    padding: 8px;
    background: transparent;
    border: none;
    border-radius: 6px;
    color: var(--color-content-muted);
    cursor: pointer;
    transition: all 0.15s ease;
  }

  .command-palette-close:hover {
    background: var(--color-surface-primary);
    color: var(--color-content-primary);
  }

  /* Modes */
  .command-palette-mode {
    display: none;
    overflow-y: auto;
    max-height: 500px;
    padding: 8px;
  }

  .command-palette-mode.active {
    display: block;
  }

  /* Sections */
  .command-palette-section {
    padding: 8px;
  }

  .command-palette-section-title {
    padding: 8px 12px;
    font-size: 12px;
    font-weight: 600;
    color: var(--color-content-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .command-palette-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  /* Items */
  .command-palette-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 10px 12px;
    border-radius: 6px;
    cursor: pointer;
    color: var(--color-content-primary);
    transition: background 0.15s ease;
  }

  .command-palette-item:hover,
  .command-palette-item.selected {
    background: var(--color-surface-subtle);
  }

  .command-palette-item-icon {
    width: 18px;
    height: 18px;
    color: var(--color-content-muted);
    flex-shrink: 0;
  }

  .command-palette-item-label {
    flex: 1;
    font-size: 14px;
  }

  .command-palette-item-external {
    width: 14px;
    height: 14px;
    color: var(--color-content-muted);
  }

  /* Footer */
  .command-palette-footer {
    display: flex;
    gap: 16px;
    padding: 12px 16px;
    border-top: 1px solid var(--color-ui-primary);
    background: var(--color-surface-subtle);
  }

  .command-palette-footer-group {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 12px;
    color: var(--color-content-muted);
  }

  .command-palette-footer kbd {
    padding: 2px 6px;
    background: var(--color-surface-primary);
    border: 1px solid var(--color-ui-primary);
    border-radius: 3px;
    font-family: monospace;
    font-size: 11px;
  }
</style>

<!-- Pagefind UI Script -->
<script src="/pagefind/pagefind-ui.js" is:inline></script>

<script>
  class CommandPalette {
    private backdrop: HTMLElement;
    private commandsMode: HTMLElement;
    private searchMode: HTMLElement;
    private tabCommands: HTMLElement;
    private tabSearch: HTMLElement;
    private closeBtn: HTMLElement;
    private currentMode: 'command' | 'search' = 'command';
    private pagefindUI: any = null;

    constructor() {
      this.backdrop = document.getElementById('command-palette-backdrop')!;
      this.commandsMode = document.getElementById('commands-mode')!;
      this.searchMode = document.getElementById('search-mode')!;
      this.tabCommands = document.getElementById('tab-commands')!;
      this.tabSearch = document.getElementById('tab-search')!;
      this.closeBtn = document.getElementById('close-palette')!;

      this.init();
    }

    private init() {
      this.setupKeyboardShortcuts();
      this.setupEventListeners();
    }

    private setupKeyboardShortcuts() {
      document.addEventListener('keydown', (e) => {
        const isTypingContext = ['INPUT', 'TEXTAREA'].includes((document.activeElement as HTMLElement)?.tagName);

        // "/" → Open command mode
        if (e.key === '/' && !e.metaKey && !e.ctrlKey && !isTypingContext) {
          e.preventDefault();
          this.open('command');
        }

        // Ctrl/Cmd + K → Open search mode
        if ((e.ctrlKey || e.metaKey) && e.key.toLowerCase() === 'k') {
          e.preventDefault();
          this.open('search');
        }

        // ESC → Close
        if (e.key === 'Escape' && this.backdrop.classList.contains('open')) {
          this.close();
        }
      });
    }

    private setupEventListeners() {
      // Close on backdrop click
      this.backdrop.addEventListener('click', (e) => {
        if (e.target === this.backdrop) {
          this.close();
        }
      });

      // Close button
      this.closeBtn.addEventListener('click', () => {
        this.close();
      });

      // Tab switching
      this.tabCommands.addEventListener('click', () => {
        this.switchMode('command');
      });

      this.tabSearch.addEventListener('click', () => {
        this.switchMode('search');
      });

      // Command items click
      this.commandsMode.addEventListener('click', (e) => {
        const item = (e.target as HTMLElement).closest('.command-palette-item') as HTMLElement;
        if (item) {
          this.executeItem(item);
        }
      });
    }

    private open(mode: 'command' | 'search') {
      this.backdrop.classList.add('open');
      this.switchMode(mode);

      // Initialize Pagefind UI on first search mode open
      if (mode === 'search' && !this.pagefindUI) {
        this.initPagefind();
      }
    }

    private close() {
      this.backdrop.classList.remove('open');
    }

    private switchMode(mode: 'command' | 'search') {
      this.currentMode = mode;

      // Update tabs
      if (mode === 'command') {
        this.tabCommands.classList.add('active');
        this.tabSearch.classList.remove('active');
        this.commandsMode.classList.add('active');
        this.searchMode.classList.remove('active');
      } else {
        this.tabSearch.classList.add('active');
        this.tabCommands.classList.remove('active');
        this.searchMode.classList.add('active');
        this.commandsMode.classList.remove('active');

        // Initialize Pagefind if not already
        if (!this.pagefindUI) {
          this.initPagefind();
        }
      }
    }

    private initPagefind() {
      if (typeof window.PagefindUI !== 'undefined') {
        this.pagefindUI = new window.PagefindUI({ 
          element: "#pagefind-container",
          showSubResults: true,
          showImages: false,
          resetStyles: false,
          autofocus: true,
          showEmptyFilters: true
        });
        console.log('[CommandPalette] Pagefind UI initialized');
      } else {
        console.error('[CommandPalette] PagefindUI not loaded');
      }
    }

    private executeItem(item: HTMLElement) {
      const type = item.dataset.type;
      const action = item.dataset.action;
      const href = item.dataset.href;

      if (type === 'action') {
        this.handleAction(action!);
      } else if (href) {
        window.location.href = href;
        this.close();
      }
    }

    private handleAction(action: string) {
      switch (action) {
        case 'theme':
          // Toggle theme using data-theme
          const html = document.documentElement;
          const pageDarkTheme = html.getAttribute('data-dark-theme') || 'dark';
          const pageLightTheme = html.getAttribute('data-light-theme') || 'light';
          const currentTheme = html.getAttribute('data-theme');
          const newTheme = currentTheme === pageDarkTheme ? pageLightTheme : pageDarkTheme;
          
          html.setAttribute('data-theme', newTheme);
          localStorage.setItem('data-theme', newTheme);
          
          this.close();
          break;
        case 'search':
          this.switchMode('search');
          break;
        default:
          console.warn('[CommandPalette] Unknown action:', action);
      }
    }
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => new CommandPalette());
  } else {
    new CommandPalette();
  }

  // Reinitialize on view transitions
  document.addEventListener('astro:page-load', () => new CommandPalette());
</script>