---
// import { PagefindUI } from '@pagefind/default-ui';
import { siteConfig } from '@/site.config';
import Icon from '@/components/common/IconWrapper.astro';
import '@pagefind/default-ui/css/ui.css';

const config = siteConfig.commandPaletteConfig;

// Build command items
const quickActions = config.quickActions.enabled ? config.quickActions.actions : [];
const navigationLinks = config.navigation.enabled ? config.navigation.links : [];
const socialLinks = config.social.enabled ? siteConfig.navigation.social : [];
---

<!-- Pagefind UI CSS -->
<!-- <link href="/pagefind/pagefind-ui.css" rel="stylesheet" /> -->

<div id="command-palette-backdrop" class="command-palette-backdrop">
  <div class="command-palette-modal">
    
    <!-- Mode Toggle Tabs -->
    <div class="command-palette-tabs">
      <button 
        id="tab-commands" 
        class="command-palette-tab active"
        data-mode="command"
      >
        <Icon name="command" class="w-4 h-4" />
        Commands
      </button>
      <button 
        id="tab-search" 
        class="command-palette-tab"
        data-mode="search"
      >
        <Icon name="search" class="w-4 h-4" />
        Search
      </button>
      <button id="close-palette" class="command-palette-close">
        <Icon name="x" class="w-4 h-4" />
      </button>
    </div>

    <!-- Commands Mode -->
    <div id="commands-mode" class="command-palette-mode active">
      
      <!-- Quick Actions Section -->
      {quickActions.length > 0 && (
        <div class="command-palette-section">
          <div class="command-palette-section-title">Quick Actions</div>
          <ul class="command-palette-list">
            {quickActions.map((action) => (
              <li
                class="command-palette-item"
                data-type="action"
                data-action={action.id}
              >
                <Icon name={action.icon} class="command-palette-item-icon" />
                <span class="command-palette-item-label">{action.label}</span>
              </li>
            ))}
          </ul>
        </div>
      )}

      <!-- Navigation Section -->
      {navigationLinks.length > 0 && (
        <div class="command-palette-section">
          <div class="command-palette-section-title">Navigation</div>
          <ul class="command-palette-list">
            {navigationLinks.map((link) => (
              <li
                class="command-palette-item"
                data-type="navigation"
                data-href={link.url}
              >
                {link.icon && <Icon name={link.icon} class="command-palette-item-icon" />}
                <span class="command-palette-item-label">{link.title}</span>
                {link.external && <Icon name="external-link" class="command-palette-item-external" />}
              </li>
            ))}
          </ul>
        </div>
      )}

      <!-- Social Links Section -->
      {socialLinks.length > 0 && (
        <div class="command-palette-section">
          <div class="command-palette-section-title">Social</div>
          <ul class="command-palette-list">
            {socialLinks.map((social) => (
              <li
                class="command-palette-item"
                data-type="social"
                data-href={social.url}
              >
                <Icon name={social.icon} class="command-palette-item-icon" />
                <span class="command-palette-item-label">{social.title}</span>
                <Icon name="external-link" class="command-palette-item-external" />
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>

    <!-- Search Mode -->
    <div id="search-mode" class="command-palette-mode max-w-full">
      <div id="pagefind-container" class="max-w-full"></div>
    </div>

    <!-- Footer -->
    <div class="command-palette-footer">
      <div class="command-palette-footer-group">
        <kbd>↑↓</kbd>
        <span>Navigate</span>
      </div>
      <div class="command-palette-footer-group">
        <kbd>↵</kbd>
        <span>Select</span>
      </div>
      <div class="command-palette-footer-group">
        <kbd>ESC</kbd>
        <span>Close</span>
      </div>
    </div>

  </div>
</div>

