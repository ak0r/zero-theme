---
import type { CollectionEntry } from 'astro:content';
import GalleryCard from '@/components/gallery/GalleryCard.astro';

type Gallery = CollectionEntry<'gallery'>;

interface Props {
  galleries: Gallery[];
  class?: string;
}

const { 
  galleries,
  class: customClass = '' 
} = Astro.props;
---

{galleries.length > 0 ? (
  <div class={`grid grid-cols-1 lg:grid-cols-2 gap-6 ${customClass}`}>
    {galleries.map((gallery) => (
      <GalleryCard gallery={gallery} />
    ))}
  </div>
) : (
  <div class="text-center py-12 text-content-muted">
    <p class="text-lg">No galleries found.</p>
  </div>
)}