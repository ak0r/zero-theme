---
import type { CollectionEntry } from 'astro:content';
import { Picture } from 'astro:assets';
import { getGalleryCoverImage, getGalleryImageCount, extractGalleryDir } from '@/utils/getGallery';

type Gallery = CollectionEntry<'gallery'>;

interface Props {
  gallery: Gallery;
}

const { gallery } = Astro.props;
const { title, description, tags } = gallery.data;

const galleryDir = extractGalleryDir(gallery.filePath);

// Get cover image and image count
const coverImage = await getGalleryCoverImage(gallery, galleryDir);
const imageCount = await getGalleryImageCount(galleryDir, gallery.data.imageDir);
---

<a 
  href={`/gallery/${gallery.id}`}
  class="gallery-card group block overflow-hidden rounded-lg border border-ui-primary bg-surface-primary hover:shadow-lg transition-all duration-300"
>
  <!-- Cover Image -->
  {coverImage ? (
    <div class="aspect-4/3 overflow-hidden bg-surface-subtle">
      <Picture
        src={coverImage.image}
        alt={title}
        widths={[400, 600, 800]}
        sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
        formats={['webp', 'avif']}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
    </div>
  ) : (
    <div class="aspect-4/3 bg-surface-subtle flex items-center justify-center">
      <svg class="w-16 h-16 text-content-muted opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </div>
  )}
  
  <!-- Content -->
  <div class="p-4">
    
    <!-- Title and Image Count -->
    <div class="flex items-start justify-between gap-2 mb-2">
      <h3 class="text-lg font-semibold text-content-primary group-hover:text-accent transition-colors line-clamp-1">
        {title}
      </h3>
      <span class="text-sm text-content-muted shrink-0">
        {imageCount} {imageCount === 1 ? 'image' : 'images'}
      </span>
    </div>
    
    <!-- Description -->
    {description && (
      <p class="text-content-muted text-sm line-clamp-2 mb-3">
        {description}
      </p>
    )}
    
    <!-- Tags -->
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2">
        {tags.slice(0, 3).map((tag) => (
          <span class="px-2 py-1 text-xs bg-surface-subtle text-content-muted rounded border border-ui-primary">
            {tag}
          </span>
        ))}
        {tags.length > 3 && (
          <span class="px-2 py-1 text-xs text-content-muted">
            +{tags.length - 3}
          </span>
        )}
      </div>
    )}
    
  </div>
</a>