---
import { getAllGalleries, getGalleryImages } from '@/utils/getGallery';
import type { GetStaticPaths } from 'astro';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Container from '@/components/layout/ContainerWrapper.astro';
import SEO from '@/components/common/SEO.astro';
import { Picture } from 'astro:assets';
import Lightbox from '@/components/common/Lightbox.astro';

export const getStaticPaths = (async () => {
  const galleries = await getAllGalleries();
  
  return galleries.map((gallery) => ({
    params: { slug: gallery.id },
    props: { gallery },
  }));
}) satisfies GetStaticPaths;

const { gallery } = Astro.props;
const { title, description, tags } = gallery.data;

// Get all images for this gallery
const images = await getGalleryImages(gallery.id);

// SEO data
const seoData = {
  title: title,
  description: description || `Photo gallery: ${title}`,
  canonical: Astro.url.href,
};
---

<BaseLayout>
  <SEO data={seoData} slot="head" />
  
  <Container class="py-8">
    
    <!-- Header -->
    <div class="animate mb-8">
      <!-- Back Link -->
      <a 
        href="/gallery"
        class="inline-flex items-center gap-2 text-content-muted hover:text-content-primary transition-colors mb-4"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Gallery
      </a>
      
      <h1 class="text-4xl font-bold text-content-primary mb-4">
        {title}
      </h1>
      
      {description && (
        <p class="text-lg text-content-muted mb-4">
          {description}
        </p>
      )}
      
      <!-- Metadata -->
      <div class="flex flex-wrap items-center gap-4 text-sm text-content-muted">
        <span>{images.length} {images.length === 1 ? 'image' : 'images'}</span>
        
        {tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <a 
                href={`/gallery/tag/${tag}`}
                class="px-2 py-1 text-xs bg-surface-subtle text-content-muted rounded border border-ui-primary hover:bg-surface-primary transition-colors"
              >
                {tag}
              </a>
            ))}
          </div>
        )}
      </div>
    </div>
    
    <!-- Image Grid -->
    {images.length > 0 ? (
      <div class="animate image-grid grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {images.map((img, index) => (
          <button
            type="button"
            class="gallery-image-button group relative aspect-square overflow-hidden rounded-lg bg-surface-subtle cursor-pointer"
            onclick={`window.dispatchEvent(new CustomEvent('openLightbox', { detail: { index: ${index}, button: this } }))`}
          >
            <Picture
              src={img.image}
              alt={img.filename}
              widths={[300, 400, 500]}
              sizes="(max-width: 640px) 50vw, (max-width: 1024px) 33vw, 25vw"
              formats={['webp', 'avif']}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
              loading="lazy"
              data-lightbox="gallery"
              data-caption={img.filename}
            />
            
            <!-- Hover Overlay -->
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300 flex items-center justify-center">
              <svg class="w-8 h-8 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
              </svg>
            </div>
          </button>
        ))}
      </div>
    ) : (
      <div class="animate text-center py-24">
        <p class="text-lg text-content-muted">
          No images found in this gallery.
        </p>
      </div>
    )}
    
  </Container>
  
  <!-- Lightbox Component -->
  <Lightbox />
</BaseLayout>

<style>
  .gallery-image-button {
    border: none;
    padding: 0;
    background: none;
  }
  
  .gallery-image-button:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
</style>